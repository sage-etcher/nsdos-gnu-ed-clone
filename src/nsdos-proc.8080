;NORTHSTAR DISK OPERATING SYSTEM PROCEDURES/ROUTINES
;AND OTHER CONSTANTS.
;
;NORTHSTAR GDOS VERSION 1.0.0 AQ ADDRESSES
;
;SAGE I HENDRICKS
;2023 NOV 14

TPA	EQU	00000H		;TRANSIENT PROGRAM AREA

NSBASE	EQU	0F700H		;BASE OF NSDOS PROCEDURES
COUT	EQU	NSBASE+0010DH	;CHARACTER OUTPUT 
CIN	EQU	NSBASE+00110H	;CHARACTER INPUT 
TINIT	EQU	NSBASE+00113H	;TERMINAL INITIALIZATION 
CONTC	EQU	NSBASE+00116H	;CHECK FOR CONTROL-C
HDERR	EQU	NSBASE+00119H	;HARD DISK ERROR
DLOOK	EQU	NSBASE+0011CH	;FILE DIRECTORY LOOKUP
DWRIT	EQU	NSBASE+0011FH	;DIRECTORY ENTRY TO DISK WRITE
DCOM	EQU	NSBASE+00122H	;FILE IO COMMAND
LIST	EQU	NSBASE+00125H	;LIST FILE DIRECTORY
DOS	EQU	NSBASE+00128H	;DOS ENTRY-POINT

DUNITN	EQU	001H		;DEFAULT UNIT NUMBER (FLOPPY INDEX)

WRITE	EQU	000H		;DCOM WRITE COMMAND
READ	EQU	001H		;DCOM READ COMMAND
VERIFY	EQU	002H		;DCOM VERIFY COMMAND

CON0	EQU	000H		;CONSOLE DEVICE ID
;TTY0	EQU	001H		;TELETYPE DEVICE ID
STDOUT	EQU	CON0		;STANDARD OUTPUT DEVICE
STDIN	EQU	CON0		;STANDARD INPUT DEVICE


