TPA	EQU	0	;TRANSIENT PROGRAM AREA

COUT	EQU	0	;CHARACTER OUTPUT 
CIN	EQU	0	;CHARACTER INPUT 
TINIT	EQU	0	;TERMINAL INITIALIZATION 
CONTC	EQU	0	;CHECK FOR CONTROL-C
HDERR	EQU	0	;HARD DISK ERROR
DLOOK	EQU	0	;FILE DIRECTORY LOOKUP
DWRIT	EQU	0	;DIRECTORY ENTRY TO DISK WRITE
DCOM	EQU	0	;FILE IO COMMAND
LIST	EQU	0	;LIST FILE DIRECTORY
DOS	EQU	0	;DOS ENTRY-POINT

DUNITN	EQU	001H	;DEFAULT UNIT NUMBER (FLOPPY INDEX)

WRITE	EQU	000H	;DCOM WRITE COMMAND
READ	EQU	001H	;DCOM READ COMMAND
VERIFY	EQU	002H	;DCOM VERIFY COMMAND

CON	EQU	001H	;CONSOLE DEVICE ID
TTY	EQU	002H	;TELETYPE DEVICE ID
STDOUT	SET	CON	;STANDARD OUTPUT DEVICE
STDIN	SET	CON	;STANDARD INPUT DEVICE


